@model zefffood.Models.Contacto

@{
    ViewData["Title"] = "CONTACTANOS";
}

<style>
    body {
        background-image: url('https://previews.123rf.com/images/topform8/topform81307/topform8130700213/20674622-comida-r%C3%A1pida-de-fondo-sin-fisuras.jpg');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px; /* Incrementar el padding para hacer el contenedor más alto */
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative; /* Agregado para el posicionamiento absoluto de la imagen */
    }
    .form-container h3 {
        font-size: 3rem; /* Incrementar el tamaño de la fuente del título */
        font-family: 'Courier New', Courier, monospace; /* Cambiar la fuente */
        font-weight: bold;
        text-align: center; /* Centrar el texto */
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.4rem; /* Incrementar el tamaño de la fuente de los elementos del formulario */
    }
    .form-container input[type="checkbox"] {
        transform: scale(1.2); /* Incrementar el tamaño del checkbox */
    }
    .form-container .checkbox-label {
        display: flex;
        align-items: center;
        margin-top: 5px; /* Agregar margen superior para bajar el checkbox y el texto */
    }
    .form-container .checkbox-label input[type="checkbox"] {
        margin-right: 5px; /* Agregar margen derecho al checkbox */
    }
    .title-box {
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }
    .forgot-password-container {
        text-align: center;
        margin-top: 20px;
        font-size: 1rem; /* Incrementar el tamaño de la fuente del enlace */
    }
    .circular-image {
        position: absolute;
        top: -60px; /* Ajusta esta posición según sea necesario */
        left: 50%;
        transform: translateX(-50%);
        width: 120px; /* Ajusta el tamaño según sea necesario */
        height: 100px;
        border-radius: 50%;
        border: 5px solid white; /* Opcional: Añadir un borde blanco */
        background-color: white; /* Fondo blanco para la imagen */
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <img src="https://img.freepik.com/vector-premium/servicio-soporte-auriculares_186930-889.jpg?w=740" alt="Circular Image" class="circular-image" />
        <div class="title-box">
            <h3>@ViewData["Title"]</h3>
        </div>
        @using (Html.BeginForm("EnviarMensaje", "Contacto", FormMethod.Post))
        {
            <fieldset>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Nombre:</label>
                    <input asp-for="Name" class="form-control" type="text" placeholder="Ingrese su nombre" aria-label="Nombre" required/>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Correo Electrónico:</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingrese su email" aria-label="Correo Electrónico" required/>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label">Categoría:</label>
                    <select asp-for="Category" class="form-select" aria-label="Categoría" required>
                        <option value="">Seleccione una categoría</option>
                        <option value="Consulta">Consulta</option>
                        <option value="Comentario">Comentario</option>
                        <option value="Sugerencia">Sugerencia</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Message" class="form-label">Mensaje:</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Ingrese su mensaje" aria-label="Mensaje" required></textarea>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                </div>
            </fieldset>
        }
        <div class="text-center mt-3">
            <h2>@ViewData["Message"]</h2>
        </div>
    </div>
</div>
