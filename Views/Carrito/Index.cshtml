@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Carrito";
    IEnumerable<zefffood.Models.Proforma> listItemsCarrito = new List<Proforma>();
    listItemsCarrito = @Model.elementosCarrito;
    Decimal montoTotal = @Model.montoTotal;
    <script src="~/js/site.js" asp-append-version="true"></script>
    Decimal igv = (18*@montoTotal)/100, del = 3, res=(montoTotal-igv),mtF=(@montoTotal+del);
}   

<h1 class="titulo"><center>@ViewData["Title"]</center></h1>
<style>
    .titulo {
        font-size: 50px;
        font-family: Arial, sans-serif;
        color: #E8563F;
        font-weight: bold;
    }
     h1 {
            font-size: 20px;
            font-family: Arial, sans-serif;
            color: #000000;
        }
      h2 {
            font-size: 15px;
            font-family: Arial, sans-serif;
            color: #000000;
        }
  
</style>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"] - Zeff_Food</title>
  <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
  <div class="wrapper">
    <main class="content">
      <div class="container">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><h1>Imagen</h1></th>
              <th><h1>Producto</h1></th>
              <th><h1>Cantidad</h1></th>
              <th><h1>Precio</h1></th>
              <th><h1>Acciones</h1></th>
            </tr>
          </thead>
          <tbody>
            @foreach (Proforma item in Model.elementosCarrito) {
              <tr>
                <td>
                <div class="card-body">
                  <div class="card-img-actions">
                     <img class="img-responsive" width="100" height="100"src="@item.Producto.ImageURL" alt="@item.Producto.ImageURL"  />
                  </div>
                </div>
            </td>
                
                <td><h2>@Html.DisplayFor(modelItem => item.Producto.Name)</h2></td>
                <td><h2>@Html.DisplayFor(modelItem => item.Cantidad)</h2></td>
                <td><h2>S/. @Html.DisplayFor(modelItem => item.Precio)</h2></td>
                <td>
                  <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                  <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
              </tr>
            }
          </tbody>
        </table>

        <div class="cart-summary">
          <p>Total: S/. @montoTotal</p>
        </div>
        <div class="cart-summary">
          <a class="btn btn-primary" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal">Pagar</a>
        </div>
      </div>
    </main>
  </div>

    <center><div class="col-sm-4">
        <div class="card" style="border-radius: 80px; height: 330px;">
          <div class="card-body" style="margin: auto auto;">
          <div class="card-img-actions">
                <center><h1>Detalles:</h1>
                <p><h1>Cargo por delivery : </h1> <h2>S/@del</h2></p>
                <p><h1>IGV(18%): </h1> <h2>S/ @igv</h2</p>
                <p><h1>Restante: </h1> <h2>S/ @res</h2></p>
                <h1>Total S/. @mtF</h1>
                <a class="btn btn-primary" asp-controller="Pago" asp-action="Create" asp-route-monto="@mtF"><img src="/Images/mastercard.png" class="img-fluid" alt="" width="30px" heigh="30px">Pagar</a>
                <a class="btn btn-info" asp-controller="Catalogo" asp-action="Index" style=""><img src="/Images/carrito2.png" class="img-fluid" alt="" width="30px" heigh="30px">Seguir Comprando</a>
            </center>
            </div>
          </div>
        </div>
    </div>
    </center>
</body>
</html>
