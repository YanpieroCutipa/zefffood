@model zefffood.Models.Proforma

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-image: url('https://static.vecteezy.com/system/resources/previews/007/759/744/original/fast-food-pattern-perfect-for-package-design-fast-food-seamless-background-vector.jpg');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px; /* Incrementar el padding para hacer el contenedor más alto */
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative; /* Agregado para el posicionamiento absoluto de la imagen */
    }
    .form-container h3 {
        font-size: 3rem; /* Incrementar el tamaño de la fuente del título */
        font-family: 'Courier New', Courier, monospace; /* Cambiar la fuente */
        font-weight: bold;
        text-align: center; /* Centrar el texto */
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.4rem; /* Incrementar el tamaño de la fuente de los elementos del formulario */
    }
    .form-container input[type="checkbox"] {
        transform: scale(1.2); /* Incrementar el tamaño del checkbox */
    }
    .form-container .checkbox-label {
        display: flex;
        align-items: center;
        margin-top: 5px; /* Agregar margen superior para bajar el checkbox y el texto */
    }
    .form-container .checkbox-label input[type="checkbox"] {
        margin-right: 5px; /* Agregar margen derecho al checkbox */
    }
    .title-box {
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }
    .forgot-password-container {
        text-align: center;
        margin-top: 20px;
        font-size: 1rem; /* Incrementar el tamaño de la fuente del enlace */
    }
    .circular-image {
        position: absolute;
        top: -60px; /* Ajusta esta posición según sea necesario */
        left: 50%;
        transform: translateX(-50%);
        width: 120px; /* Ajusta el tamaño según sea necesario */
        height: 100px;
        border-radius: 50%;
        border: 5px solid white; /* Opcional: Añadir un borde blanco */
        background-color: white; /* Fondo blanco para la imagen */
    }
</style>


<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <img src="https://cdn-icons-png.flaticon.com/512/269/269074.png" alt="Circular Image" class="circular-image" />
        <div class="title-box">
    <h1 class="text-center mb-4">Editar</h1>
    <h1 class="text-center mb-4">Proforma</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
        <form asp-controller="Carrito" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="Precio" />
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}