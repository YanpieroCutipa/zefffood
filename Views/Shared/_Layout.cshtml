<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zeff_Food</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <link rel="icon" type="image/png" href="~/images/Logo_simple.png" asp-append-version="true">

     @* cofiguracion navbar *@

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
</head> 
<body>
    <header>
        <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo_nav" src="~/images/logo_simple.png" alt=""> Zeff_Food</a>
        <nav class="navbar navbar-expand-sm ">
            <div class="container-fluid">
              
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Nosotros" asp-action="Index">Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index">Contactame</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Todo" asp-action="Index">Todo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TipoCambio" asp-action="Index">TipoCambio</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ML" asp-action="Index">Sentimiento</a>
                        </li>
                    
                    </li>
                        <partial name="_MenuAdminPartial" />
                    </ul>
                    </ul>
                    <partial name="_LoginPartial" />    
                </div>
            </div>
        </nav>

    <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <!-- <i class="fas fa-search" id="search-icon"></i>-->
        <!-- <a href="#" class="fas fa-heart"></a>-->
        <!-- <a href="#" class="fas fa-shopping-cart"></a>-->
    </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
      html, body {
  height: 100%;
  margin: 0;
}

body {
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1; /* Esto permite que el contenido principal ocupe el espacio disponible */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Alinea el contenido principal verticalmente si es necesario */
  align-items: center; /* Alinea el contenido principal horizontalmente */
}

footer {
  background-color: #E8563F;
  padding: 20px 0;
  position: relative;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-between; /* Distribute the content evenly across the footer */
  align-items: center; /* Center the content vertically */
}

footer p {
  margin-bottom: 0;
  font-size: 18px;
}

footer a {
  color: #fff;
  font-size: 20px;
  text-decoration: none;
}

footer a:hover {
  text-decoration: underline;
}

.nav-links,
.social-icons {
  display: flex;
  gap: 20px;
}

.nav-links a,
.social-icons a {
  color: #fff;
  font-size: 18px;
  text-decoration: none;
}

.nav-links a:hover,
.social-icons a:hover {
  text-decoration: underline;
}
    
    </style>


    <div class="content">
      <!-- Contenido principal de la página -->
    </div>

    <footer class="footer text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <p>&copy; 2024 - Zeff_Food - <a href="/Home/Privacy" class="text-white">Privacidad</a></p>
          </div>
          <div class="col-md-6 text-end">
            <ul class="list-inline">
              <li class="list-inline-item"><a href="https://github.com/YanpieroCutipa/zefffood" class="text-white"><i class="fab fa-github"></i></a></li>
              <li class="list-inline-item"><a href="#" class="text-white"><i class="fab fa-facebook"></i></a></li>
              <!--<li class="list-inline-item"><a href="#" class="text-white"><i class="fab fa-twitter"></i></a></li>-->
              <li class="list-inline-item"><a href="#" class="text-white"><i class="fab fa-instagram"></i></a></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="nav-links">
              <a href="/Home">Inicio</a>
              <a href="/Nosotros">Nosotros</a>
              <a href="/Contacto">Contáctame</a>
              <a href="/Catalogo">Catálogo</a>
              
            </div>
          </div>
        </div>
      </div>
    </footer>


</style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- custom js file link  -->
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>