<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zeff_Food</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="icon" type="image/png" href="~/images/Logo_simple.png" asp-append-version="true">

     @* cofiguracion navbar *@

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
</head> 
<body>
    <header>
        <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo_nav" src="~/images/logo_simple.png" alt=""> Zeff_Food</a>
        <nav class="navbar navbar-expand-sm ">
            <div class="container-fluid">
              
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index">Contactame</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrito" asp-action="Index">Carrito</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />    
                </div>
            </div>
        </nav>

    <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <i class="fas fa-search" id="search-icon"></i>
        <a href="#" class="fas fa-heart"></a>
        <a href="#" class="fas fa-shopping-cart"></a>
    </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white" style="background-color: #E8563F;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <p>&copy; 2024 - Zeff_Food - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacidad</a></p>
            </div>
            <div class="col-md-6 text-end">
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="https://github.com/YanpieroCutipa/zefffood" class="text-white"><i class="fab fa-facebook"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="fab fa-twitter"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
<style>
    .footer {
    background-color: #E8563F;
    padding: 20px 0; /* Ajusta el espaciado interno del footer según sea necesario */
}

.footer p {
    margin-bottom: 0; /* Elimina el margen inferior del párrafo dentro del footer */
    font-size: 18px; /* Tamaño de fuente más grande */
}

.footer a {
    color: #fff; /* Color del texto de los enlaces */
    font-size: 20px; /* Tamaño de fuente más grande */
}

.footer a:hover {
    text-decoration: none; /* Elimina el subrayado al pasar el ratón sobre los enlaces */
}

.list-inline-item {
    margin-right: 10px; /* Ajusta el espaciado entre los elementos de la lista en línea */
    font-size: 24px; /* Tamaño de fuente más grande */
}

</style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- custom js file link  -->
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
