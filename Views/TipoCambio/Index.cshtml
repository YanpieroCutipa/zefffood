@model zefffood.Integration.currencyexchange.dto.TipoCambio

@{
    ViewData["Title"] = "TipoCambio";
}
<style>
    body {
        background-image: url('https://jmagazine.joins.com/_data/photo/2020/03/3698936108_izCZRDOT_1.jpg');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px; /* Incrementar el padding para hacer el contenedor más alto */
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative; /* Agregado para el posicionamiento absoluto de la imagen */
    }
    .form-container h3 {
        font-size: 3rem; /* Incrementar el tamaño de la fuente del título */
        font-family: 'Courier New', Courier, monospace; /* Cambiar la fuente */
        font-weight: bold;
        text-align: center; /* Centrar el texto */
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.4rem; /* Incrementar el tamaño de la fuente de los elementos del formulario */
    }
    .form-container input[type="checkbox"] {
        transform: scale(1.2); /* Incrementar el tamaño del checkbox */
    }
    .form-container .checkbox-label {
        display: flex;
        align-items: center;
        margin-top: 5px; /* Agregar margen superior para bajar el checkbox y el texto */
    }
    .form-container .checkbox-label input[type="checkbox"] {
        margin-right: 5px; /* Agregar margen derecho al checkbox */
    }
    .title-box {
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }
    .forgot-password-container {
        text-align: center;
        margin-top: 20px;
        font-size: 1rem; /* Incrementar el tamaño de la fuente del enlace */
    }
    .circular-image {
        position: absolute;
        top: -60px; /* Ajusta esta posición según sea necesario */
        left: 50%;
        transform: translateX(-50%);
        width: 120px; /* Ajusta el tamaño según sea necesario */
        height: 100px;
        border-radius: 50%;
        border: 5px solid white; /* Opcional: Añadir un borde blanco */
        background-color: white; /* Fondo blanco para la imagen */
    }
</style>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <img src="https://cdn-icons-png.flaticon.com/512/6871/6871714.png" alt="Circular Image" class="circular-image" />
        <div class="title-box">
    <h1 class="text-center mb-4">Formulario de Tipo Cambio</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="TipoCambio" asp-action="Exchange" method="post">
                <div class="form-group">
                    <label asp-for="From" class="control-label"></label>
                    <input asp-for="From" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="To" class="control-label"></label>
                    <input asp-for="To" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                </div>
            </form>
             <h1>Tipo Cambio: @ViewData["rate"]</h1>
             <h1>Cambio Total: @ViewData["cambio"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
        </div>
    </div>
</div>