@model IEnumerable<zefffood.Models.Producto>
@{
    ViewData["Title"] = "CATALOGO";
    ViewData["Content"] = "HAMBURGUESAS - HOT DOG - SANDWICH";
    ViewData["Content2"] = "SALCHIPAPAS - PIZZAS - TACOS";
    ViewData["Content3"] = "BEBIDAS";
}

<h1 class="titulo"><center>@ViewData["Title"]</center></h1>
<style>
       
        .titulo {
            font-size: 50px;
            font-family: Arial, sans-serif;
            font-weight: bold; 
        }

        h1 {
            font-size: 20px;
            font-family: Arial, sans-serif;
            color: #E8563F;
        }

        h5 {
            font-size: 30px;
            font-family: Arial, sans-serif;
            color: #050505;
            font-weight: bold; 
        }

        p {
            font-size: 20px;
            font-family: Arial, sans-serif;
            color: #050505;
        }

    
    </style>
    <h1><center>@ViewData["Content"]</h1></center>
    <h1><center>@ViewData["Content2"]</h1></center>
    <h1><center>@ViewData["Content3"]</h1></center>
<div class="container">
    <div class="row mb-3">
        <div class="col">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <form asp-controller="Catalogo" asp-action="Index" class="d-flex">
                        <input type="text" name="searchString" class="form-control me-2" placeholder="Buscar productos">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
    <h2>@ViewData["Message"]</h2>
    <div class="row">
        <div class="col">
            <div id="products" class="mb-3">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-img-actions">
                                        <img src="@item.ImageURL" class="d-block w-100 image-fit">
                                    </div>
                                </div>
                                <div class="card-body">
                                    <center><h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Price)</p>
                                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">AÃ±adir Carrito</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Ver Mas</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
