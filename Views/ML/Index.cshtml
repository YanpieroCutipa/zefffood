@{
    ViewData["Title"] = "ANALISIS DE SENTIMIENTOS";
}

<style>
    body {
        background-image: url('https://img.freepik.com/fotos-premium/patron-fisuras-varios-articulos-comida-rapida-incluidas-hamburguesas-perritos-calientes-pizza-papas-fritas_14117-252410.jpg?w=1060');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative;
    }
    .form-container h3 {
        font-size: 3rem;
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
        text-align: center;
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.4rem;
    }
    .title-box {
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }
    .result-box {
        margin-top: 20px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <div class="title-box">
            <h3>@ViewData["Title"]</h3>
        </div>
        <form asp-controller="ML" asp-action="Predict" method="post">
            <fieldset>
                <div class="form-group mb-3">
                    <label for="sentimiento">Escribe tu sentimiento:</label>
                    <input type="text" class="form-control" id="sentimiento" name="sentimiento" />
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-light" style="background-color:#020202; color:white;">Enviar</button>
                </div>
            </fieldset>
        </form>
        @if (ViewData["Sentimiento"] != null)
        {
            <div class="result-box">
                <h2>Resultado de la Predicci√≥n</h2>
                <p>Sentimiento Predicho: @ViewData["Sentimiento"]</p>
                <p>Sentimiento Score: @ViewData["Score"]</p>
                <p>Sentimiento Positivo o Negativo: @ViewData["SentimientoPredicho"]</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
