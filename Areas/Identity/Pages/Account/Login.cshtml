@page
@model LoginModel

@{
    ViewData["Title"] = "INICIAR SESIÓN";
}

<style>
    body {
        background-image: url('https://img.freepik.com/fotos-premium/patron-fisuras-varios-articulos-comida-rapida-incluidas-hamburguesas-perritos-calientes-pizza-papas-fritas_14117-252410.jpg?w=1060');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
    }
    .form-container h3 {
        font-size: 1.8rem;
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.2rem;
    }
    .form-container input[type="checkbox"] {
        transform: scale(1.2);
    }
    .title-box {
        font-weight: bold;
        border: 2px solid #363636;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        background-color: #fffdf0;
        margin-bottom: 20px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <div class="title-box">
            <h3>@ViewData["Title"]</h3>
        </div>
        <form id="formulario" method="post">
            <fieldset>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Ingresa tu email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" id="password" placeholder="Ingresa tu contraseña" />
                    <input type="checkbox" onclick="mostrar()" value="Mostrar Contraseña"> Mostrar contraseña
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-light" style="background-color:#020202; color:white;">INICIAR SESIÓN</button>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color:black;">¿Olvidó su contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color:black;">Registrarse como un nuevo usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color:black;">Reenviar correo de confirmación</a>
                    </p>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script type="text/javascript">
    function mostrar(){
        var tipo = document.getElementById("password");
        tipo.type = tipo.type === 'password' ? 'text' : 'password';
    }
</script>
