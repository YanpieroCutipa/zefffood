@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "¿OLVIDÓ SU CONTRASEÑA?";
}

<style>
    body {
        background-image: url('https://img.freepik.com/fotos-premium/patron-fisuras-varios-articulos-comida-rapida-incluidas-hamburguesas-perritos-calientes-pizza-papas-fritas_14117-252410.jpg?w=1060');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px; /* Ajustado para consistencia con las otras páginas */
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative;
        font-size: 1.4rem; /* Ajustado para consistencia con las otras páginas */
    }
    .form-container h3 {
        font-size: 3rem; /* Ajustado para consistencia con las otras páginas */
        font-family: 'Courier New', Courier, monospace; /* Ajustado para consistencia con las otras páginas */
        font-weight: bold;
        text-align: center; /* Ajustado para consistencia con las otras páginas */
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.4rem; /* Ajustado para consistencia con las otras páginas */
    }
    .form-container input[type="checkbox"] {
        transform: scale(1); /* Ajustado para consistencia con las otras páginas */
    }
    .title-box {
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }
    .circular-image {
        position: absolute;
        top: -60px; /* Ajustado para consistencia con las otras páginas */
        left: 50%;
        transform: translateX(-50%);
        width: 120px; /* Ajustado para consistencia con las otras páginas */
        height: 100px;
        border-radius: 50%;
        border: 5px solid white; /* Ajustado para consistencia con las otras páginas */
        background-color: white; /* Ajustado para consistencia con las otras páginas */
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        @*<img src="https://logowik.com/content/uploads/images/chef5524.logowik.com.webp" alt="Circular Image" class="circular-image" />*@
        <div class="title-box">
            <h3>@ViewData["Title"]</h3>
        </div>
        @*<h4 class="text-center">Ingrese su Email</h4>*@
        <form method="post">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Correo Electrónico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-light w-100" style="background-color:#020202; color:white;">Restablecer Contraseña</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



