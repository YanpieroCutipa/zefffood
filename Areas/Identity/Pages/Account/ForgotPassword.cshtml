@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "¿OLVIDO SU CONTRASEÑA?";
}

<style>
    body {
        background-image: url('https://img.freepik.com/fotos-premium/patron-fisuras-varios-articulos-comida-rapida-incluidas-hamburguesas-perritos-calientes-pizza-papas-fritas_14117-252410.jpg?w=1060');
        background-size: cover;
        background-position: center;
    }
    .form-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        font-size: 1.3rem;
    }
    .form-container h3 {
        font-size: 1.8rem;
    }
    .form-container .form-control,
    .form-container label,
    .form-container button {
        font-size: 1.2rem;
    }
    .form-container input[type="checkbox"] {
        transform: scale(1.2);
    }
    .title-box {
        font-weight: bold;
        border: 2px solid #000;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        background-color: #fffdf0;
        margin-bottom: 20px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <div class="title-box">
            <h3>@ViewData["Title"]</h3>
        </div>
        <h4 class="text-center">Ingrese su Email</h4>
        <form method="post">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo Electrónico: </label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-light w-100" style="background-color:#020202; color:white;">Reset Password</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


