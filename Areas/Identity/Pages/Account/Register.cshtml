@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}
<h1 class="display-6 fw-bold text-center"></h1>
    <div class="col-lg-6 mx-auto">

<div class="row">
    
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
           <h3 class="text-center" >Crear una nueva cuenta</h3>
           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Email">Correo Electrónico: </label>
                <input asp-for="Input.Email" class="form-control tamaño" placeholder="Ingresa tu email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Password">Contraseña: </label>
                <input asp-for="Input.Password" class="form-control tamaño" id="password" placeholder="Ingresa tu contraseña"/>
                <input type="checkbox" onclick="mostrar()" value="Mostrar Contraseña"> Mostrar contraseña 
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.ConfirmPassword">Confirmar Contraseña: </label>
                <input asp-for="Input.ConfirmPassword" class="form-control tamaño" id="confirm" placeholder="Ingresa tu contraseña"/>
                
                <input type="checkbox" onclick="mostrar2()" value="Mostrar Contraseña"> Mostrar contraseña    
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           
           <div class="text-center mt-5">
 
            <button type="submit" class="btn btn-light" style="background-color:#020202; color:white;">Registrar</button>

            </div>

            </fieldset>

        </form>
       
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script type="text/javascript">
    function mostrar(){
         var tipo = document.getElementById("password");

         if(tipo.type == 'password'){
            tipo.type = 'text';
         }else{
            tipo.type = 'password';
         }
    }

    

    function mostrar2(){
         var tip = document.getElementById("confirm");

         if(tip.type == 'password'){
            tip.type = 'text';
         }else{
            tip.type = 'password';
         }
    }

</script>
